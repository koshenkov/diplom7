<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/fon2"
    android:layout_height="match_parent"
    tools:context=".ActivityAtteactions1">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="409dp"
        android:layout_height="729dp"

        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp">

        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="729dp"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="50dp"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@android:color/primary_text_light"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="352dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/primary_text_light" />

            <Button
                android:id="@+id/button16"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:background="@drawable/button"
                android:onClick="send4"
                android:text="Просмотреть фото" />

            <Button
                android:id="@+id/button2"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:background="@drawable/button"
                android:onClick="send"
                android:text="Оставить отзыв" />

            <Button
                android:id="@+id/button1"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:background="@drawable/button"
                android:onClick="send1"

                android:text="Просмотреть отзывы" />

            <Button
                android:id="@+id/button4"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:background="@drawable/button"
                android:onClick="send3"
                android:text="Построить маршрут" />

            <Button
                android:id="@+id/button3"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:background="@drawable/button"
                android:onClick="send2"
                android:text="Админ" />




        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>